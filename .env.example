# Digital Manager Guru API credentials for coupon listing script
# Copy this file to .env and fill in your values.

# Base URL and API version (adjust if your account uses a different subdomain/version)
DMGURU_API_BASE=https://api.digitalmanager.guru
DMGURU_API_VERSION=v1

# API authentication
# Place your API key/token here. If your API requires a different header/scheme,
# adjust DMGURU_AUTH_HEADER and DMGURU_AUTH_SCHEME below accordingly.
DMGURU_API_KEY=

# Optional: header name and auth scheme (defaults shown)
DMGURU_AUTH_HEADER=Authorization
DMGURU_AUTH_SCHEME=Bearer

# Optional: account or workspace identifier if your API requires it
DMGURU_ACCOUNT_ID=

# Optional: pagination page size
DMGURU_PER_PAGE=100

# Pagar.me v5 configuration (server-side)
# API base and key (do NOT commit real key)
PAGARME_BASE_URL=https://api.pagar.me/core/v5
PAGARME_API_KEY=

# Minimum allowed value per installment in cents (e.g., 2000 = R$ 20,00)
PAGARME_MIN_INSTALLMENT_CENTS=2000

# Optional: default dry-run behavior for checkout endpoint (true/false)
PAGARME_DRY_RUN=true
